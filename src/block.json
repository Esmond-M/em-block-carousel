{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "em-block-carousel/em-block-carousel",
	"version": "0.1.0",
	"title": "EM Carousel",
	"category": "widgets",

    "description": "Scrollable, responsive carousel of recent posts.",
	"example": {},
	"supports": {
		"html": false
	},
	"attributes": {
    "sectionTitle": { "type": "string", "default": "Latest Posts" },
    "postsToShow": { "type": "number", "default": 9 },
    "categories": { "type": "array", "items": { "type": "number" }, "default": [] },
    "showExcerpt": { "type": "boolean", "default": true },
    "postType": { "type": "string", "default": "post" },
    "order": { "type": "string", "default": "desc" },
    "orderBy": { "type": "string", "default": "date" }
    },
	"textdomain": "em-block-carousel",
    "editorScript": "file:./index.js",
    "style": "file:./style.css",
    "viewScript": "file:./view.js",
    "render": "file:./render.php"
}
